<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.laxu.apps.commonurllist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.laxu.apps.commonurllist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.laxu.apps.commonurllist.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="de.laxu.apps.commonurllist.ShareURLIntent"
            android:label="@string/title_activity_share_url" android:theme="@android:style/Theme.NoDisplay">
            <intent-filter android:label="Shared URL-List">
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="@string/text_mimetype"/>
            </intent-filter>
        </activity>
    </application>

</manifest>